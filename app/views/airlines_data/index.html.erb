<!--Tab Menu-->
<div class="container">
	<h1>Ticket And Airlines Setup</h1>
	<% flash.each do |key, value| %>
	<div class="alert alert-<%= key %>"><%= value %></div>
	<% end %>
</div>
<div id="exTab1" class="container">
	<ul  class="nav nav-pills">
		<li class="active">
			<a  href="#1a" data-toggle="tab">Airlines Lists</a>
		</li>
		<li><a href="#2a" data-toggle="tab">Ticket Lists</a>
	</li>
</ul>
<div class="tab-content clearfix">
	<div class="tab-pane active" id="1a">
		<h3>Airlines Setup</h3>
		<h3 class="pull-right"><%= link_to '<i class="fa fa-plus text-success"></i>'.html_safe, new_airlines_datum_path, :title => "Add New Airline"%></h3>
		<table class="table table-bordered">
			<tr>
				<th>Airlines Name</th>
				<th>Airlines Address</th>
				<th>Airlines Contact</th>
				<th>Airlines Plane Capacity</th>
				<th>Actions</th>
			</tr>
			<% @airlines.each do |airline| %>
			<tr>
				<td><%= airline.airlines_name %></td>
				<td><%= airline.airlines_address %></td>
				<td><%= airline.airlines_contact %></td>
				<td><%= airline.airlines_plane_capacity %></td>
				<td>
					<%= link_to '<i class="fa fa-pencil"></i>'.html_safe, edit_airlines_datum_path(airline.id) %>
					<%= link_to '<i class="fa fa-trash text-danger"></i>'.html_safe, airlines_datum_path(airline.id), method: :delete, data: {confirm: "Are you sure to delete the Airlines?" } %>
				</td>
			</tr>
			<% end %>
		</table>
		<%= will_paginate @airlines %>
	</div>
	<div class="tab-pane" id="2a">
		<h3>We use the class nav-pills instead of nav-tabs which automatically creates a background color for the tab</h3>
	</div>
</div>
</div>